##########################################
#  TADS3 Package for Sublime Text 4:     #
#  https://github.com/tajmone/ST4-TADS3  #
##########################################

root = true

## Configurations
#################
[.{git*,editorconfig,*.yml}]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Sublime Text
###############
[*.{sublime-*,tmPreferences}]
charset = utf-8
end_of_line = unset
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Shell Scripts
################
[*.sh]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

## Markdown GFM
###############
[*.md]
charset = utf-8
end_of_line = unset
indent_size = unset
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## AsciiDoc
###########
[*.{ad,adoc,asciidoc}]
charset = utf-8
end_of_line = unset
indent_size = unset
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Ruby
#######
[{*.rb,*.gemspec,*.rake,Rakefile,rakefile}]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

## Python
#########
[*.py]
charset = utf-8
end_of_line = unset
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Miscellanea
##############
[*.{cfg,json}]
charset = utf-8
end_of_line = unset
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

## Plain-Text Files
###################
[*.txt]
indent_style = space
indent_size = unset
end_of_line = unset
trim_trailing_whitespace = true
insert_final_newline = true

[LICENSE]
indent_size = unset
indent_style = space
end_of_line = unset
trim_trailing_whitespace = true
insert_final_newline = true


# EOF #
